= task_status_breadcrumbs

= form_for [@workspace.context, @workspace, @task_status] do |f|
  -if @task_status.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task_status.errors.count, "error")} prohibited this task_status from being saved:"
      %ul
        - @task_status.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :default
    = f.check_box :default
  .field
    = f.label :todo
    = f.check_box :todo
  .actions
    = f.submit 'Save'
