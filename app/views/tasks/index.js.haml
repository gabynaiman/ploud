$('#flash').hide().html("#{escape_javascript(show_flash)}").fadeIn();
$("#tasks").html("#{escape_javascript render(@tasks)}");
$("#paginator").html("#{escape_javascript(paginate(@tasks, :remote => true, :params => {:controller => :tasks, :action => :index}).to_s)}");

