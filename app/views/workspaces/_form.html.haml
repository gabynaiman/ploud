= workspace_breadcrumbs

= form_for [@context, @workspace] do |f|
  -if @workspace.errors.any?
    #error_explanation
      %h2= "#{pluralize(@workspace.errors.count, "error")} prohibited this workspace from being saved:"
      %ul
        - @workspace.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
